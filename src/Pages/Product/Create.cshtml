@page
@model ContosoCrafts.WebSite.Pages.Product.CreateModel

@{
    ViewData["Title"] = "Create New Team";
}

<style>
    /* Your styles remain unchanged */
</style>

<h1>Create New Team</h1>

<div class="form-container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Team Title -->
        <div class="form-group">
            <label asp-for="Product.Title" class="control-label">Team Title</label>
            <input asp-for="Product.Title" class="form-control" />
            <span asp-validation-for="Product.Title" class="text-danger"></span>
        </div>

        <!-- Description -->
        <div class="form-group">
            <label asp-for="Product.Description" class="control-label">Description</label>
            <input asp-for="Product.Description" class="form-control" />
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>

        <!-- URL -->
        <div class="form-group">
            <label asp-for="Product.Url" class="control-label">URL</label>
            <input asp-for="Product.Url"
                   type="text"
                   class="form-control"
                   placeholder="e.g., https://www.example.com"
                   pattern="https?:\\/\\/(www\\.)?[a-zA-Z0-9\\-\\.]+\\.com$"
                   title="Please enter a valid URL that starts with http:// or https:// and ends with .com"
                   required />
            <small class="form-text text-muted">The URL must start with "http://" or "https://" and end with ".com".</small>
            <span asp-validation-for="Product.Url" class="text-danger"></span>
        </div>

        <!-- Image URL -->
        <div class="form-group">
            <label asp-for="Product.Image" class="control-label">Image URL</label>
            <input asp-for="Product.Image" class="form-control" />
            <span asp-validation-for="Product.Image" class="text-danger"></span>
        </div>

        <!-- Founding Year -->
        <div class="form-group">
            <label asp-for="Product.FoundingYear" class="control-label">Founding Year</label>
            <input asp-for="Product.FoundingYear" class="form-control" />
            <span asp-validation-for="Product.FoundingYear" class="text-danger"></span>
        </div>

        <!-- Trophies -->
        <div class="form-group">
            <label asp-for="Product.Trophies" class="control-label">Trophies</label>
            <input asp-for="Product.Trophies" class="form-control" />
            <span asp-validation-for="Product.Trophies" class="text-danger"></span>
        </div>

        <!-- Select Sport -->
        <div class="form-group">
            <label asp-for="Product.Sport" class="control-label">Select Sport</label>
            <select asp-for="Product.Sport" class="form-control">
                <option value="">-- Select Sport --</option>
                @foreach (var sport in Enum.GetValues(typeof(ContosoCrafts.WebSite.Models.SportsEnum)))
                {
                    <option value="@sport">@Enum.GetName(typeof(ContosoCrafts.WebSite.Models.SportsEnum), sport)</option>
                }
            </select>
            <span asp-validation-for="Product.Sport" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}