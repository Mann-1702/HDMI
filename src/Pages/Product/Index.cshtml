@page
@model ContosoCrafts.WebSite.Pages.Product.IndexModel
@using ContosoCrafts.WebSite.Models <!-- Importing the namespace for ProductTypeEnum -->
@{
    ViewData["Title"] = "Index page";
}

<div class="container">
    <!-- First table: Display all Sport products -->
    <h2>Sport Products</h2>
    <table class="table table-bordered table-striped" style="background-color:lightgrey;">
        <thead>
            <tr>
                <th style="font-family:'Century Gothic';">Title</th>
                <th style="font-family:'Century Gothic';">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products.Where(p => p.ProductType == ProductTypeEnum.Sport))
            {
                <tr>
                    <td style="font-family:'Century Gothic';">@product.Title</td>
                    <td style="font-family:'Century Gothic';"><a asp-page="Read" asp-route-id="@product.Id">Read</a></td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Second table: Display all Team products -->
    <h2>Team Products</h2>
    <table class="table table-bordered table-striped" style="background-color:lightgrey;">
        <thead>
            <tr>
                <th style="font-family:'Century Gothic';">Title</th>
                <th style="font-family:'Century Gothic';">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products.Where(p => p.ProductType == ProductTypeEnum.Team))
            {
                <tr>
                    <td style="font-family:'Century Gothic';">@product.Title</td>
                    <td style="font-family:'Century Gothic';"><a asp-page="Read" asp-route-id="@product.Id">Read</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
