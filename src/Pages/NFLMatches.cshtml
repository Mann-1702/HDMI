@page
@model ContosoCrafts.WebSite.Pages.NFLMatches
@{
    ViewData["Title"] = "NFL Match Results for 2023";
}

<h2>NFL Match Results for 2023</h2>

@if (Model.Games == null || !Model.Games.Any())
{
    <p>No games available for 2023.</p>
}
else
{
    <div class="container">
        <div class="row">
            @foreach (var game in Model.Games)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">Stage: @game.Game.Stage</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Week: @game.Game.Week</h6>

                            <p><strong>Date:</strong> @game.Game.Date.Date @game.Game.Date.Time (Timezone: @game.Game.Date.Timezone)</p>
                            <p><strong>Venue:</strong> @game.Game.Venue.Name, @game.Game.Venue.City</p>
                            <p><strong>Status:</strong> @game.Game.Status.Long (Short: @game.Game.Status.Short)</p>

                            <div class="d-flex align-items-center">
                                <strong>Home Team:</strong>
                                <img src="@game.Teams.Home.Logo" alt="@game.Teams.Home.Name Logo" width="30" class="mx-2" />
                                @game.Teams.Home.Name -
                                <span class="badge bg-primary">@game.Scores.Home.Total</span>
                            </div>

                            <div class="d-flex align-items-center mt-2">
                                <strong>Away Team:</strong>
                                <img src="@game.Teams.Away.Logo" alt="@game.Teams.Away.Name Logo" width="30" class="mx-2" />
                                @game.Teams.Away.Name -
                                <span class="badge bg-secondary">@game.Scores.Away.Total</span>
                            </div>

                            <h6 class="mt-3">Quarter Scores:</h6>
                            <ul class="list-unstyled">
                                <li><strong>Home -</strong> Q1: @game.Scores.Home.Quarter_1, Q2: @game.Scores.Home.Quarter_2, Q3: @game.Scores.Home.Quarter_3, Q4: @game.Scores.Home.Quarter_4</li>
                                <li><strong>Away -</strong> Q1: @game.Scores.Away.Quarter_1, Q2: @game.Scores.Away.Quarter_2, Q3: @game.Scores.Away.Quarter_3, Q4: @game.Scores.Away.Quarter_4</li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
