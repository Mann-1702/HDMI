@page
@model ContosoCrafts.WebSite.Pages.EPLMatches
@{
}

<h1>Soccer Matches for 2024</h1>


<div class="row">
    @foreach (var game in Model.Games ?? Enumerable.Empty<FixtureResponse>())
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">

                    <h6 class="card-subtitle mb-2 text-muted">
                        League: @game.League?.Name, Country: @game.League?.Country
                    </h6>

                    <p><strong>Date:</strong> @(game.Date?.Start ?? "N/A") (Timezone: @(game.Date?.Timezone ?? "N/A"))</p>
                    

                    <div class="d-flex align-items-center mt-3">
                        <strong>Home Team:</strong>
                        <img src="@game.Teams?.Home?.Logo" alt="@game.Teams?.Home?.Name Logo" width="30" class="mx-2" />
                        <span>@game.Teams?.Home?.Name </span>
                    </div>

                    <div class="d-flex align-items-center mt-3">
                        <strong>Away Team:</strong>
                        <img src="@game.Teams?.Visitors?.Logo" alt="@game.Teams?.Visitors?.Name Logo" width="30" class="mx-2" />
                        <span>@game.Teams?.Visitors?.Name </span>
                    </div>

                    <p>
                        <strong>Final Score:</strong>
                        Home: @(game.Scores?.Fulltime?.Home?.ToString() ?? "N/A")
                        - Away: @(game.Scores?.Fulltime?.Away?.ToString() ?? "N/A")
                    </p>

                    <p>
                        <strong>Halftime Score:</strong>
                        Home: @(game.Scores?.Halftime?.Home?.ToString() ?? "N/A")
                        - Away: @(game.Scores?.Halftime?.Away?.ToString() ?? "N/A")
                    </p>

                   </div>
            </div>
        </div>
    }
</div>
