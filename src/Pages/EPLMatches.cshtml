@page
@model ContosoCrafts.WebSite.Pages.EPLMatches
@{
    ViewData["Title"] = "EPL Match Results for 2024";
}

<h2>EPL Match Results for 2024</h2>

<table class="table table-bordered table-striped" style="background-color:lightgrey;">
    <thead>
        <tr>
            <th>Match (Home vs Away)</th>
            <th>Score</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model.Games ?? Enumerable.Empty<FixtureResponse>())
        {
            <tr>
                <td>
                    <div style="display: flex; justify-content: space-between; align-items: center; width: 100%;">
                        <!-- Home Team with logo on the right and aligned right -->
                        <div style="display: flex; align-items: center; justify-content: flex-end; width: 45%;">
                            <span>@game.Teams.Home.Name</span>
                            <img src="@game.Teams.Home.Logo" width="30" class="mx-2" alt="Home Team Logo" />
                        </div>

                        <!-- Separator text "vs" centered and slightly shifted left -->
                        <span style="text-align: center; width: 10%; margin-right: -10px;">vs</span>

                        <!-- Away Team with fixed width for alignment -->
                        <div style="display: flex; align-items: center; width: 45%;">
                            <img src="@game.Teams.Visitors.Logo" width="30" class="mx-2" alt="Away Team Logo" />
                            <span>@game.Teams.Visitors.Name</span>
                        </div>
                    </div>
                </td>


                <td align="center">
                    @((game.Scores.Fulltime.Home.HasValue && game.Scores.Fulltime.Away.HasValue)
                        ? $"{game.Scores.Fulltime.Home} - {game.Scores.Fulltime.Away}"
                        : "N/A")
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!(Model.Games?.Any() ?? false))
{
    <p>No matches available for 2024.</p>
}
