@page
@model ContosoCrafts.WebSite.Pages.NBAMatches
@{
}

<h1>NBA Matches for 2024</h1>
<div class="container">
    <div class="row">
        @foreach (var game in Model.Games ?? Enumerable.Empty<NbaGameResponse>())
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">Stage: @game.Stage</h5>
                        <h6 class="card-subtitle mb-2 text-muted">League: @game.League, Season: @game.Season</h6>

                        <p><strong>Date:</strong> @game.Date.Start (Duration: @game.Date.Duration)</p>

                        <p><strong>Status:</strong> @game.Status.Long (Short: @game.Status.Short)</p>
                        @if (!string.IsNullOrEmpty(game.Status.Clock))
                        {
                            <p><strong>Clock:</strong> @game.Status.Clock</p>
                        }
                        <p><strong>Halftime:</strong> @(game.Status.Halftime ? "Yes" : "No")</p>

                        <div class="d-flex align-items-center mt-3">
                            <strong>Home Team:</strong>
                            <img src="@game.Teams.Home.Logo" alt="@game.Teams.Home.Name Logo" width="30" class="mx-2" />
                            @game.Teams.Home.Name - <span class="badge bg-primary">@game.Scores.Home.Points</span>
                        </div>

                        <div class="d-flex align-items-center mt-2">
                            <strong>Visitors Team:</strong>
                            <img src="@game.Teams.Visitors.Logo" alt="@game.Teams.Visitors.Name Logo" width="30" class="mx-2" />
                            @game.Teams.Visitors.Name - <span class="badge bg-secondary">@game.Scores.Visitors.Points</span>
                        </div>

                        <h6 class="mt-3">Quarter Scores:</h6>
                        <ul class="list-unstyled">
                            <li>
                                <strong>Home -</strong>
                                Q1: @game.Scores.Home.Linescore[0], Q2: @game.Scores.Home.Linescore[1],
                                Q3: @game.Scores.Home.Linescore[2], Q4: @game.Scores.Home.Linescore[3]
                            </li>
                            <li>
                                <strong>Visitors -</strong>
                                Q1: @game.Scores.Visitors.Linescore[0], Q2: @game.Scores.Visitors.Linescore[1],
                                Q3: @game.Scores.Visitors.Linescore[2], Q4: @game.Scores.Visitors.Linescore[3]
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@if (!(Model.Games?.Any() ?? false))
{
    <p>No games available for 2024.</p>
}
